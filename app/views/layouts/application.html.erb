    <div class="main-content-area">
      <div class="container">
        <%= yield %>
      </div>
    </div>

    <footer class="site-footer">
      <div class="container">
        <p class="site-footer__notice">© 2020 Built by The London Borough of Camden. Loved by Essex County Council</p>
        <nav class="site-footer__menu">
          <a class="site-footer__link" href="https://www.essex.gov.uk/topic/privacy-and-data-protection">Privacy and data protection</a>
